<idea-plugin>
    <id>com.github.hawk.quicknote</id>
    <name>quicknote-ideavim</name>
    <vendor>584973</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="QuickNoteAction"
                class="com.github.hawk.quicknote.QuickNoteAction"
                text="Quick Note"
                description="Open a markdown note for this project">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
